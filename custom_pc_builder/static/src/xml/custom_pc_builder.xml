```xml
<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_pc_builder">
        <div class="custom_pc_builder">
            <div class="pc_build">
                <h3>Customize Your PC Build</h3>
                <div class="component_selection">
                    <h4>Select Components</h4>
                    <t t-foreach="components" t-as="component">
                        <div class="component">
                            <t t-esc="component.name"/>
                            <select class="component_options">
                                <t t-foreach="component.options" t-as="option">
                                    <option t-esc="option"/>
                                </t>
                            </select>
                        </div>
                    </t>
                </div>
                <div class="pc_build_preview">
                    <h4>Preview Your PC Build</h4>
                    <t t-foreach="pc_build" t-as="component">
                        <div class="component">
                            <t t-esc="component.name"/>: <t t-esc="component.selected_option"/>
                        </div>
                    </t>
                </div>
                <div class="pc_build_save">
                    <button type="button" class="save_button">Save Build</button>
                </div>
            </div>
            <div class="saved_pc_builds">
                <h3>Your Saved PC Builds</h3>
                <t t-foreach="saved_pc_builds" t-as="pc_build">
                    <div class="pc_build">
                        <h4 t-esc="pc_build.name"/>
                        <t t-foreach="pc_build.components" t-as="component">
                            <div class="component">
                                <t t-esc="component.name"/>: <t t-esc="component.selected_option"/>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
