                        <field name="peripherals"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pc_build_tree_view" model="ir.ui.view">
        <field name="name">pc.build.tree.view</field>
        <field name="model">pc.build</field>
        <field name="arch" type="xml">
            <tree string="PC Builds">
                <field name="name"/>
                <field name="cpu"/>
                <field name="ram"/>
                <field name="gpu"/>
                <field name="storage"/>
                <field name="peripherals"/>
            </tree>
